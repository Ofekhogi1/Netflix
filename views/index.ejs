<!-- HERO BANNER -->
<% if (typeof contents !== 'undefined' && contents.length > 0) { %>
  <section class="content-hero" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('<%= contents[0].imageUrl || "/img/placeholder.png" %>');">
    <div class="content-hero-content">
      <h1><%= contents[0].title %></h1>
      <p><%= contents[0].description || 'צפה עכשיו בתוכן הכי חם' %></p>
      <div>
        <a href="/player/<%= contents[0]._id %>" class="btn btn-play">
          <i class="bi bi-play-fill"></i> נגן
        </a>
        <a href="/content/<%= contents[0]._id %>" class="btn btn-info">
          <i class="bi bi-info-circle"></i> מידע נוסף
        </a>
      </div>
    </div>
  </section>
<% } %>

<!-- CONTINUE WATCHING -->
<% if (typeof continueWatching !== 'undefined' && continueWatching.length > 0) { %>
  <section class="feed-section">
    <h2 class="section-title">
      <i class="bi bi-arrow-clockwise"></i> המשך צפייה
    </h2>
    <div class="content-row">
      <% continueWatching.forEach(item => { %>
        <div class="content-card">
          <% 
            const playUrl = item.watchEpisode 
              ? `/player/${item._id}?episode=${item.watchEpisode}` 
              : `/player/${item._id}`;
          %>
          <a href="<%= playUrl %>">
            <img src="<%= item.imageUrl || '/img/placeholder.png' %>" alt="<%= item.title %>">
            <div class="progress-overlay">
              <div class="progress-bar-overlay" style="width: <%= item.watchProgress || 0 %>%"></div>
            </div>
          </a>
          <div class="content-card-body">
            <h5 class="content-card-title">
              <%= item.title %>
              <% if (item.watchEpisode) { %>
                <span class="text-muted" style="font-size: 0.85rem;"> - פרק <%= item.watchEpisode %></span>
              <% } %>
            </h5>
            <a href="<%= playUrl %>" class="btn btn-play btn-sm">
              <i class="bi bi-play-fill"></i> המשך
            </a>
            <a href="/content/<%= item._id %>" class="btn btn-info btn-sm">
              <i class="bi bi-info-circle"></i>
            </a>
          </div>
        </div>
      <% }) %>
    </div>
  </section>
<% } %>

<!-- RECOMMENDED FOR YOU -->
<% if (typeof recommendedContent !== 'undefined' && recommendedContent.length > 0) { %>
  <section class="feed-section">
    <h2 class="section-title">
      <i class="bi bi-star-fill"></i> מומלץ בשבילך
    </h2>
    <div class="content-row">
      <% recommendedContent.forEach(item => { %>
        <div class="content-card">
          <a href="/content/<%= item._id %>">
            <img src="<%= item.imageUrl || '/img/placeholder.png' %>" alt="<%= item.title %>">
          </a>
          <div class="content-card-body">
            <h5 class="content-card-title"><%= item.title %></h5>
            <div class="d-flex gap-2">
              <a href="/player/<%= item._id %>" class="btn btn-play btn-sm">
                <i class="bi bi-play-fill"></i> נגן
              </a>
              <a href="/content/<%= item._id %>" class="btn btn-info btn-sm">
                <i class="bi bi-info-circle"></i>
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </section>
<% } %>

<!-- MY LIKED CONTENT -->
<% if (typeof likedContent !== 'undefined' && likedContent.length > 0) { %>
  <section class="feed-section">
    <div class="section-title">
      <i class="bi bi-heart-fill" style="color: var(--netflix-red);"></i>
      <span>תכנים שאהבתי</span>
      <a href="/liked" class="view-all-link">צפה בהכל <i class="bi bi-arrow-left"></i></a>
    </div>
    <div class="content-row">
      <% likedContent.forEach(item => { %>
        <div class="content-card">
          <a href="/content/<%= item._id %>">
            <img src="<%= item.imageUrl || '/img/placeholder.png' %>" alt="<%= item.title %>">
          </a>
          <div class="content-card-body">
            <h5 class="content-card-title"><%= item.title %></h5>
            <div class="d-flex gap-2 mt-1">
              <% 
                const playUrl = item.type === 'series' && item.episodes && item.episodes.length > 0 
                  ? `/player/${item._id}?episode=1` 
                  : `/player/${item._id}`;
              %>
              <a href="<%= playUrl %>" class="btn btn-play btn-sm">
                <i class="bi bi-play-fill"></i> נגן
              </a>
              <a href="/content/<%= item._id %>" class="btn btn-info btn-sm">
                <i class="bi bi-info-circle"></i>
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </section>
<% } %>

<!-- TV SERIES SECTION -->
<% if (typeof seriesContent !== 'undefined' && seriesContent.length > 0) { %>
  <section class="feed-section">
    <h2 class="section-title">
      <i class="bi bi-collection-play"></i> סדרות
    </h2>
    <div class="content-row">
      <% seriesContent.forEach(item => { %>
        <div class="content-card">
          <a href="/content/<%= item._id %>">
            <img src="<%= item.imageUrl || '/img/placeholder.png' %>" alt="<%= item.title %>">
          </a>
          <div class="content-card-body">
            <h5 class="content-card-title"><%= item.title %></h5>
            <% if (item.totalEpisodes) { %>
              <small class="text-muted">
                <i class="bi bi-film"></i> <%= item.totalEpisodes %> פרקים
              </small>
            <% } %>
            <div class="d-flex gap-2">
              <% 
                const playUrl = item.episodes && item.episodes.length > 0 
                  ? `/player/${item._id}?episode=1` 
                  : `/player/${item._id}`;
              %>
              <a href="<%= playUrl %>" class="btn btn-play btn-sm">
                <i class="bi bi-play-fill"></i> נגן
              </a>
              <a href="/content/<%= item._id %>" class="btn btn-info btn-sm">
                <i class="bi bi-info-circle"></i>
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </section>
<% } %>

<!-- POPULAR CONTENT -->
<section class="feed-section">
  <h2 class="section-title">
    <i class="bi bi-fire"></i> פופולרי עכשיו
  </h2>
  <div class="content-row">
    <% if (typeof popularContent !== 'undefined' && popularContent.length > 0) { %>
      <% popularContent.forEach(item => { %>
        <div class="content-card">
          <a href="/content/<%= item._id %>">
            <img src="<%= item.imageUrl || '/img/placeholder.png' %>" alt="<%= item.title %>">
          </a>
          <div class="content-card-body">
            <h5 class="content-card-title"><%= item.title %></h5>
            <% if (item.views) { %>
              <small class="text-muted">
                <i class="bi bi-eye"></i> <%= item.views %> צפיות
              </small>
            <% } %>
            <div class="d-flex gap-2">
              <a href="/player/<%= item._id %>" class="btn btn-play btn-sm">
                <i class="bi bi-play-fill"></i> נגן
              </a>
              <a href="/content/<%= item._id %>" class="btn btn-info btn-sm">
                <i class="bi bi-info-circle"></i>
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else if (typeof contents !== 'undefined' && contents.length > 0) { %>
      <% contents.forEach(item => { %>
        <div class="content-card">
          <a href="/content/<%= item._id %>">
            <img src="<%= item.imageUrl || '/img/placeholder.png' %>" alt="<%= item.title %>">
          </a>
          <div class="content-card-body">
            <h5 class="content-card-title"><%= item.title %></h5>
            <div class="d-flex gap-2">
              <a href="/player/<%= item._id %>" class="btn btn-play btn-sm">
                <i class="bi bi-play-fill"></i> נגן
              </a>
              <a href="/content/<%= item._id %>" class="btn btn-info btn-sm">
                <i class="bi bi-info-circle"></i>
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-12 text-center py-5">
        <i class="bi bi-film" style="font-size: 4rem; color: #666;"></i>
        <p class="text-muted mt-3">אין תוכן זמין כרגע</p>
        <% if (user && user.isAdmin) { %>
          <a href="/admin/add" class="btn btn-netflix mt-2">
            <i class="bi bi-plus-circle"></i> הוסף תוכן
          </a>
        <% } %>
      </div>
    <% } %>
  </div>
</section>

<!-- NEW RELEASES -->
<% if (typeof contents !== 'undefined' && contents.length > 0) { %>
  <section class="feed-section">
    <h2 class="section-title">
      <i class="bi bi-star-fill"></i> חדש ב-Netflix
    </h2>
    <div class="content-row">
      <% contents.slice(0, 10).forEach(item => { %>
        <div class="content-card">
          <a href="/content/<%= item._id %>">
            <img src="<%= item.imageUrl || '/img/placeholder.png' %>" alt="<%= item.title %>">
          </a>
          <div class="content-card-body">
            <h5 class="content-card-title"><%= item.title %></h5>
            <% if (item.year) { %>
              <small class="text-muted">
                <i class="bi bi-calendar3"></i> <%= item.year %>
              </small>
            <% } %>
            <div class="d-flex gap-2 mt-2">
              <a href="/player/<%= item._id %>" class="btn btn-play btn-sm">
                <i class="bi bi-play-fill"></i>
              </a>
              <a href="/content/<%= item._id %>" class="btn btn-info btn-sm">
                <i class="bi bi-info-circle"></i>
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </section>
<% } %>

<!-- GENRES PREVIEW (Dynamic from DB - 10 newest per genre) -->
<% 
if (typeof contentByGenre !== 'undefined' && Object.keys(contentByGenre).length > 0) {
  Object.keys(contentByGenre).forEach(genre => {
    const genreItems = contentByGenre[genre];
    if (genreItems && genreItems.length > 0) {
%>
  <section class="feed-section">
    <h2 class="section-title">
      חדש ב<%= genre %>
      <a href="/genre/<%= genre %>" class="float-end text-netflix-red" style="font-size: 0.9rem;">
        צפה בכל <i class="bi bi-chevron-left"></i>
      </a>
    </h2>
    <div class="content-row">
      <% genreItems.forEach(item => { %>
        <div class="content-card">
          <a href="/content/<%= item._id %>">
            <img src="<%= item.imageUrl || '/img/placeholder.png' %>" alt="<%= item.title %>">
          </a>
          <div class="content-card-body">
            <h5 class="content-card-title"><%= item.title %></h5>
            <div class="d-flex gap-2">
              <a href="/player/<%= item._id %>" class="btn btn-play btn-sm">
                <i class="bi bi-play-fill"></i>
              </a>
              <a href="/content/<%= item._id %>" class="btn btn-info btn-sm">
                <i class="bi bi-info-circle"></i>
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </section>
<%
    }
  });
}
%>

<style>
/* Additional Feed Styles */
.progress-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4px;
  background-color: rgba(255,255,255,0.3);
}

.progress-bar-overlay {
  height: 100%;
  background-color: var(--netflix-red);
  transition: width 0.3s;
}

.content-hero {
  position: relative;
  height: 70vh;
  background-size: cover;
  background-position: center;
  display: flex;
  align-items: center;
  padding: 4rem 10% 4rem 6%; /* more right padding so title isn't flush to edge */
  margin: -80px -10% 2rem -6%;
  border-radius: 0;
}

.content-hero::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to top, var(--netflix-black) 0%, transparent 50%);
}

.content-hero-content {
  position: relative;
  z-index: 2;
  max-width: 720px;
  transform: translateX(-12%); /* nudge left so title has better spacing */
}

.content-hero h1 {
  font-size: 3rem;
  font-weight: 900;
  margin-bottom: 1rem;
  text-shadow: 2px 2px 4px rgba(0,0,0,0.8);
}

.content-hero p {
  font-size: 1.2rem;
  margin-bottom: 1.5rem;
  color: var(--netflix-light-gray);
  text-shadow: 1px 1px 2px rgba(0,0,0,0.8);
}

@media (max-width: 768px) {
  .content-hero {
    height: 50vh;
  }
  
  .content-hero h1 {
    font-size: 2rem;
  }
  
  .content-hero p {
    font-size: 1rem;
  }
}
</style>